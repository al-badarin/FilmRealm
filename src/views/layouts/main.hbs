<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>FilmRealm</title>
    <link href='/css/style.css' type='text/css' rel='stylesheet' />
    <script src='https://cdn.tailwindcss.com'></script>
    <link
      href='https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap'
      rel='stylesheet'
    />
    <style>
      body { font-family: 'Montserrat', sans-serif; } html { scroll-behavior:
      smooth; } /* Custom Color Scheme */ :root { --primary-color: #1e293b;
      --secondary-color: #f43f5e; --accent-color: #38bdf8; --text-color-dark:
      #0f172a; --text-color-light: #e2e8f0; --bg-color: #f1f5f9; --footer-bg:
      #334155; } /* Global improvements */ body { background-color:
      var(--bg-color); color: var(--text-color-dark); } a { transition: all 0.3s
      ease; } a:hover { color: var(--accent-color); } /* Header */ header {
      background-color: var(--primary-color); } nav ul li a { color:
      var(--text-color-light); } nav ul li a:hover { color: var(--accent-color);
      } /* Mobile Menu */ #mobile-menu { background-color: var(--primary-color);
      } #mobile-menu a { color: var(--text-color-light); } /* Error container */
      .error-container { background-color: #f87171; color: white; } /* Footer */
      footer { background-color: var(--footer-bg); color:
      var(--text-color-light); } footer p { font-size: 0.9rem; }
    </style>
  </head>

  <body class='bg-gray-100 text-gray-900'>
    <div id='container' class='min-h-screen flex flex-col'>
      <!-- Error handling -->
      {{#if error}}
        <div class='error-container bg-red-100 text-red-700 p-4 rounded mb-4'>
          <p>{{error}}</p>
        </div>
      {{/if}}

      <!-- Sticky Header with mobile navigation -->
      <header class='bg-primary shadow sticky top-0 z-50'>
        <nav class='container mx-auto flex justify-between items-center py-4'>
          <!-- Logo -->
          <div class='logo-container'>
            <a href='/' aria-label='Home'>
              <img src='/img/logo.webp' alt='FilmRealm Logo' class='h-12' />
            </a>
          </div>

          <!-- Mobile Hamburger Menu -->
          <div class='block lg:hidden'>
            <button
              id='menu-toggle'
              class='focus:outline-none text-gray-200 hover:text-accent-color'
            >
              <svg
                class='w-6 h-6'
                fill='none'
                stroke='currentColor'
                viewBox='0 0 24 24'
                xmlns='http://www.w3.org/2000/svg'
              >
                <path
                  stroke-linecap='round'
                  stroke-linejoin='round'
                  stroke-width='2'
                  d='M4 6h16M4 12h16m-7 6h7'
                ></path>
              </svg>
            </button>
          </div>

          <!-- Full Menu for large screens -->
          <ul id='menu' class='menu hidden lg:flex space-x-6'>
            <li>
              <a href='/' class='text-gray-300 hover:text-accent-color'>Home</a>
            </li>
            <li>
              <a
                href='/about'
                class='text-gray-300 hover:text-accent-color'
              >About</a>
            </li>
            <li>
              <a
                href='/search'
                class='text-gray-300 hover:text-accent-color'
              >Search</a>
            </li>
            {{#if isAuthenticated}}
              <li>
                <a
                  href='/create'
                  class='text-gray-300 hover:text-accent-color'
                >Add Movie</a>
              </li>
              <li>
                <a
                  href='/cast/create'
                  class='text-gray-300 hover:text-accent-color'
                >Create Cast</a>
              </li>
              <li>
                <a
                  href='/auth/logout'
                  class='text-red-600 hover:text-red-400'
                >Logout</a>
              </li>
            {{else}}
              <li>
                <a
                  href='/auth/login'
                  class='text-blue-600 hover:text-accent-color'
                >Login</a>
              </li>
              <li>
                <a
                  href='/auth/register'
                  class='text-blue-600 hover:text-accent-color'
                >Register</a>
              </li>
            {{/if}}
          </ul>
        </nav>

        <!-- Mobile Menu (Hidden by default) -->
        <div id='mobile-menu' class='hidden lg:hidden bg-gray-700'>
          <ul class='space-y-4 py-4 text-center'>
            <li>
              <a href='/' class='text-gray-300 hover:text-accent-color'>Home</a>
            </li>
            <li>
              <a
                href='/about'
                class='text-gray-300 hover:text-accent-color'
              >About</a>
            </li>
            <li>
              <a
                href='/search'
                class='text-gray-300 hover:text-accent-color'
              >Search</a>
            </li>
            {{#if isAuthenticated}}
              <li>
                <a
                  href='/create'
                  class='text-gray-300 hover:text-accent-color'
                >Add Movie</a>
              </li>
              <li>
                <a
                  href='/cast/create'
                  class='text-gray-300 hover:text-accent-color'
                >Create Cast</a>
              </li>
              <li>
                <a
                  href='/auth/logout'
                  class='text-red-600 hover:text-red-400'
                >Logout</a>
              </li>
            {{else}}
              <li>
                <a
                  href='/auth/login'
                  class='text-blue-600 hover:text-accent-color'
                >Login</a>
              </li>
              <li>
                <a
                  href='/auth/register'
                  class='text-blue-600 hover:text-accent-color'
                >Register</a>
              </li>
            {{/if}}
          </ul>
        </div>
      </header>

      <!-- Main Content -->
      <main class='container mx-auto flex-grow py-8'>
        {{{body}}}
      </main>

      <!-- Footer -->
      <footer class='bg-footer-bg text-gray-200 py-8'>
        <div class='container mx-auto text-center'>
          <p class='mb-4 text-sm'>
            Â© 2024 FilmRealm - Explore the Boundless World of Cinema
          </p>
        </div>
      </footer>
    </div>

    <!-- Link external JavaScript files -->
    <script src='/js/menu.js'></script>
    <script src='/js/descriptionToggle.js'></script>
  </body>
</html>