<html lang='en'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>FilmRealm</title>
    <link href='/css/style.css' type='text/css' rel='stylesheet' />
    <script src='https://cdn.tailwindcss.com'></script>
    <!-- Google Font -->
    <link
      href='https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap'
      rel='stylesheet'
    />
    <style>
      /* Ensure the use of custom font globally */ body { font-family:
      'Montserrat', sans-serif; } /* Smooth scroll for the entire page */ html {
      scroll-behavior: smooth; }
    </style>
  </head>

  <body class='bg-gray-100 text-gray-900'>
    <div id='container' class='min-h-screen flex flex-col'>
      <!-- Error handling -->
      {{#if error}}
        <div class='error-container bg-red-100 text-red-700 p-4 rounded mb-4'>
          <p>{{error}}</p>
        </div>
      {{/if}}

      <!-- Sticky Header with mobile navigation -->
      <header class='bg-white shadow sticky top-0 z-50'>
        <nav class='container mx-auto flex justify-between items-center py-4'>
          <!-- Logo -->
          <div class='logo-container'>
            <a href='/' aria-label='Home'>
              <img src='/img/logo.webp' alt='FilmRealm Logo' class='h-12' />
            </a>
          </div>

          <!-- Mobile Hamburger Menu -->
          <div class='block lg:hidden'>
            <button id='menu-toggle' class='focus:outline-none text-gray-700'>
              <svg
                class='w-6 h-6'
                fill='none'
                stroke='currentColor'
                viewBox='0 0 24 24'
                xmlns='http://www.w3.org/2000/svg'
              >
                <path
                  stroke-linecap='round'
                  stroke-linejoin='round'
                  stroke-width='2'
                  d='M4 6h16M4 12h16m-7 6h7'
                ></path>
              </svg>
            </button>
          </div>

          <!-- Full Menu for large screens -->
          <ul id='menu' class='menu hidden lg:flex space-x-6'>
            <li><a
                href='/'
                class='text-gray-700 hover:text-gray-900'
              >Home</a></li>
            <li><a
                href='/about'
                class='text-gray-700 hover:text-gray-900'
              >About</a></li>
            <li><a
                href='/search'
                class='text-gray-700 hover:text-gray-900'
              >Search</a></li>
            {{#if isAuthenticated}}
              <li><a
                  href='/create'
                  class='text-gray-700 hover:text-gray-900'
                >Create Post</a></li>
              <li><a
                  href='/cast/create'
                  class='text-gray-700 hover:text-gray-900'
                >Create Cast</a></li>
              <li><a
                  href='/auth/logout'
                  class='text-red-600 hover:text-red-800'
                >Logout</a></li>
            {{else}}
              <li><a
                  href='/auth/login'
                  class='text-blue-600 hover:text-blue-800'
                >Login</a></li>
              <li><a
                  href='/auth/register'
                  class='text-blue-600 hover:text-blue-800'
                >Register</a></li>
            {{/if}}
          </ul>
        </nav>

        <!-- Mobile Menu (Hidden by default) -->
        <div id='mobile-menu' class='hidden lg:hidden bg-gray-200'>
          <ul class='space-y-4 py-4 text-center'>
            <li><a
                href='/'
                class='text-gray-700 hover:text-gray-900'
              >Home</a></li>
            <li><a
                href='/about'
                class='text-gray-700 hover:text-gray-900'
              >About</a></li>
            <li><a
                href='/search'
                class='text-gray-700 hover:text-gray-900'
              >Search</a></li>
            {{#if isAuthenticated}}
              <li><a
                  href='/create'
                  class='text-gray-700 hover:text-gray-900'
                >Create Post</a></li>
              <li><a
                  href='/cast/create'
                  class='text-gray-700 hover:text-gray-900'
                >Create Cast</a></li>
              <li><a
                  href='/auth/logout'
                  class='text-red-600 hover:text-red-800'
                >Logout</a></li>
            {{else}}
              <li><a
                  href='/auth/login'
                  class='text-blue-600 hover:text-blue-800'
                >Login</a></li>
              <li><a
                  href='/auth/register'
                  class='text-blue-600 hover:text-blue-800'
                >Register</a></li>
            {{/if}}
          </ul>
        </div>
      </header>

      <!-- Main Content -->
      <main class='container mx-auto flex-grow py-8'>
        {{{body}}}
      </main>

      <!-- Footer -->
      <footer class='bg-gray-800 text-gray-200 py-8'>
        <div class='container mx-auto text-center'>
          <p class='mb-4'>Â© 2024 FilmRealm - Explore the Boundless World of
            Cinema</p>
          <div class='flex justify-center space-x-4'>
            <!-- Social Media Icons -->
            <a
              href='https://facebook.com'
              target='_blank'
              class='text-gray-400 hover:text-gray-200 transition'
            >
              <svg class='w-6 h-6' fill='currentColor' viewBox='0 0 24 24'>
                <path
                  d='M18 2h-3a6 6 0 0 0-6 6v3H7v4h2v8h4v-8h3l1-4h-4v-3a1 1 0 0 1 1-1h3z'
                />
              </svg>
            </a>
            <a
              href='https://twitter.com'
              target='_blank'
              class='text-gray-400 hover:text-gray-200 transition'
            >
              <svg class='w-6 h-6' fill='currentColor' viewBox='0 0 24 24'>
                <path
                  d='M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20-1 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z'
                />
              </svg>
            </a>
          </div>
        </div>
      </footer>
    </div>

    <!-- Link external JavaScript files -->
    <script src='/js/menu.js'></script>
    <script src='/js/descriptionToggle.js'></script>

  </body>

</html>