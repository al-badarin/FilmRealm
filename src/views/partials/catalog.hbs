{{#each movies}}
  <div
    class='bg-white shadow-md rounded-lg overflow-hidden transform hover:scale-105 transition-transform duration-300 ease-in-out hover:shadow-xl flex flex-col'
  >
    <!-- Movie Poster -->
    <div class='relative h-64 bg-gray-200'>
      <img
        src='{{imageUrl}}'
        alt='{{title}}'
        class='h-full w-full object-cover'
      />
    </div>

    <!-- Movie Details -->
    <div class='p-6 flex flex-col justify-between flex-grow'>
      <div class='flex-grow'>
        <!-- Movie Title -->
        <h2 class='text-2xl font-bold text-gray-900 mb-3'>{{title}}</h2>

        <!-- Movie Genre -->
        <p class='text-gray-700 mb-2'><strong>Genre:</strong> {{genre}}</p>

        <!-- Movie Description (with overflow handling) -->
        <p class='text-gray-600 text-sm mb-4'>
          <strong>Description:</strong>
          <span id='desc-{{_id}}' class='truncate block'>{{shorten
              description
              100
            }}</span>
          <span
            id='full-desc-{{_id}}'
            class='hidden block'
          >{{description}}</span>
          <a
            href='javascript:void(0)'
            class='text-blue-600 cursor-pointer hover:underline'
            onclick="toggleDescription('{{_id}}')"
          >
            <span id='read-more-{{_id}}'>Read More</span>
            <span id='read-less-{{_id}}' class='hidden'>Read Less</span>
          </a>
        </p>
      </div>

      <!-- Details Button -->
      <div class='mt-4 flex justify-between items-center'>
        <a
          href='/movies/{{_id}}'
          class='flex items-center bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg transition duration-200 ease-in-out'
        >
          <svg
            class='w-5 h-5 mr-2'
            fill='none'
            stroke='currentColor'
            stroke-linecap='round'
            stroke-linejoin='round'
            stroke-width='2'
            viewBox='0 0 24 24'
            xmlns='http://www.w3.org/2000/svg'
          ><path d='M19 12H5M12 19l-7-7 7-7'></path></svg>
          Details
        </a>
      </div>
    </div>
  </div>
{{else}}
  <div class='text-center py-8'>
    <p class='text-gray-600 text-lg'>There are no movies available...</p>
  </div>
{{/each}}