<section id='details-page' class='py-8'>
  <div
    class='main_card flex flex-col lg:flex-row bg-white shadow-lg rounded-lg overflow-hidden'
  >
    <div class='card_left p-8 lg:w-2/3'>
      <div class='card_details mb-6'>
        <h1 class='text-4xl font-bold text-gray-800 mb-4'>{{movie.title}}</h1>
        <div class='card-movie grid grid-cols-1 md:grid-cols-2 gap-4 mb-4'>
          <div class='first-info'>
            <p class='card-genre text-lg text-gray-600'>Genre:
              {{movie.genre}}</p>
            <p class='card-director text-lg text-gray-600'>Director:
              {{movie.director}}</p>
          </div>
          <div class='second-info'>
            <p class='card-year text-lg text-gray-600'>Year: {{movie.year}}</p>
            <p class='card-ranking text-lg text-gray-600'>
              Rating:
              <span id='stars'>{{#each movie.rating}} &#x2605; {{/each}}</span>
            </p>
          </div>
        </div>
        <p class='disc text-lg text-gray-700'>Description:
          {{movie.description}}</p>
      </div>

      {{#if isOwner}}
        <div class='details-btn flex space-x-4'>
          <a
            href='/movies/{{movie._id}}/edit'
            id='edit-button'
            class='bg-blue-600 text-white font-bold py-2 px-6 rounded-lg hover:bg-blue-700 transition-colors duration-300'
          >Edit</a>
          <a
            href='/movies/{{movie._id}}/delete'
            id='delete-button'
            class='bg-red-600 text-white font-bold py-2 px-6 rounded-lg hover:bg-red-700 transition-colors duration-300'
          >Delete</a>
        </div>
      {{/if}}
    </div>

    <div class='card_right lg:w-1/3'>
      <img
        src='{{movie.imageUrl}}'
        alt='image'
        class='object-cover h-full w-full'
      />
    </div>
  </div>

  <div
    class='main-cast-card mt-8 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8'
  >
    {{#each movie.casts}}
      <div class='cast-card bg-white shadow-lg rounded-lg overflow-hidden'>
        <div class='card-img'>
          <img
            src='{{castImage}}'
            alt='{{name}}'
            class='object-cover h-48 w-full'
          />
        </div>
        <div class='cast-info p-4'>
          <h1 class='text-xl font-bold text-gray-800 mb-2'>{{name}}</h1>
          <h3 class='text-lg text-gray-600'>Age: {{age}}</h3>
          <h3 class='text-lg text-gray-600'>Born: {{born}}</h3>
          <h3 class='text-lg text-gray-600'>Name in Movie: {{nameInMovie}}</h3>
        </div>
      </div>
    {{else}}
      <div class='no-cast col-span-full text-center text-gray-600'>
        <p>There are no casts added yet...</p>
      </div>
    {{/each}}
  </div>
</section>