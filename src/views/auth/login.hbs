<section
  id='login-page'
  class='min-h-screen flex items-center justify-center bg-gray-100 p-8'
>
  <div class='loginSection bg-white shadow-lg rounded-lg p-8 max-w-md w-full'>
    <div class='info mb-6'>
      <h2 class='text-2xl font-semibold text-gray-700 text-center'>
        "My mama always said life was like a box of chocolates. You never know
        what you're gonna get."
      </h2>
    </div>

    <!-- Display server-side errors -->
    {{#if error}}
      <div
        class='bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4'
      >
        <span class='block sm:inline'>{{error}}</span>
      </div>
    {{/if}}

    <form
      id='loginForm'
      action='/auth/login'
      method='post'
      class='loginForm space-y-4'
    >
      <h2 class='text-3xl font-bold text-center text-gray-800 mb-6'>Login</h2>
      <ul class='noBullet space-y-4'>
        <li>
          <label
            for='email'
            class='block text-gray-600 font-medium mb-1'
          >Email:</label>
          <input
            type='text'
            class='inputFields w-full border border-gray-300 rounded-lg p-2'
            id='email'
            name='email'
            required
          />
          <p id='email-error' class='text-red-500 text-sm hidden'>Please enter a
            valid email.</p>
        </li>
        <li>
          <label
            for='password'
            class='block text-gray-600 font-medium mb-1'
          >Password:</label>
          <input
            type='password'
            class='inputFields w-full border border-gray-300 rounded-lg p-2'
            id='password'
            name='password'
            required
          />
          <p id='password-error' class='text-red-500 text-sm hidden'>Password
            cannot be empty.</p>
        </li>
        <li id='center-btn' class='text-center'>
          <button
            id='login-btn'
            class='bg-blue-600 text-white font-bold py-2 px-6 rounded-lg hover:bg-blue-700 transition-colors duration-300'
          >
            Login
          </button>
        </li>
      </ul>
    </form>
  </div>

  <script src='/js/formValidation.js'></script>
  <script>
    // Attach the form validation logic to the login form
    attachLoginFormValidation('loginForm');
  </script>
</section>