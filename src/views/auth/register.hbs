<section
  id='register-page'
  class='min-h-screen flex items-center justify-center bg-gray-100 p-8'
>
  <div
    class='registerSection bg-white shadow-lg rounded-lg p-8 max-w-md w-full'
  >
    <div class='info-register mb-6'>
      <h2 class='text-2xl font-semibold text-gray-700 text-center'>
        "I hope you're pleased with yourselves. We could all have been killed â€”
        or worse, expelled. Now if you don't mind, I'm going to bed."
      </h2>
    </div>
    <form action='/auth/register' method='post' class='registerForm space-y-4'>
      <h2
        class='text-3xl font-bold text-center text-gray-800 mb-6'
      >Register</h2>
      <ul class='noBullet space-y-4'>
        <li>
          <label
            for='email'
            class='block text-gray-600 font-medium mb-1'
          >Email:</label>
          <input
            type='text'
            class='inputFields w-full border border-gray-300 rounded-lg p-2'
            id='email'
            name='email'
            value='{{email}}'
          />
        </li>
        <li>
          <label
            for='password'
            class='block text-gray-600 font-medium mb-1'
          >Password:</label>
          <input
            type='password'
            class='inputFields w-full border border-gray-300 rounded-lg p-2'
            id='password'
            name='password'
            value='{{password}}'
          />
        </li>
        <li>
          <label
            for='repeat-password'
            class='block text-gray-600 font-medium mb-1'
          >Repeat Password:</label>
          <input
            type='password'
            class='inputFields w-full border border-gray-300 rounded-lg p-2'
            id='repeat-password'
            name='rePassword'
          />
        </li>
        <li id='center-btn' class='text-center'>
          <button
            id='join-btn'
            class='bg-green-600 text-white font-bold py-2 px-6 rounded-lg hover:bg-green-700 transition-colors duration-300'
          >Register</button>
        </li>
      </ul>
    </form>
  </div>
</section>